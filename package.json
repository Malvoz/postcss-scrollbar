{
  "name": "postcss-scrollbar",
  "version": "0.1.0",
  "description": "PostCSS plugin enabling custom scrollbars",
  "keywords": [
    "css",
    "scrollbar",
    "postcss",
    "postcss-plugin"
  ],
  "author": {
    "name": "Pascal Duez",
    "url": "https://github.com/pascalduez"
  },
  "homepage": "https://github.com/pascalduez/postcss-scrollbar",
  "bugs": "https://github.com/pascalduez/postcss-scrollbar/issues",
  "repository": {
    "type": "git",
    "url": "git://github.com/pascalduez/postcss-scrollbar.git"
  },
  "license": "Unlicense",
  "files": [
    "dist",
    "CHANGELOG.md",
    "README.md",
    "UNLICENSE"
  ],
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint src/ test/",
    "validate": "run-s lint",
    "test": "jest",
    "test:cover": "run-s 'test -- --coverage'",
    "test:cover:browse": "run-s test:cover && opn coverage/lcov-report/index.html",
    "test:ci": "run-s lint test:cover",
    "develop": "babel-node develop/",
    "prebuild": "rm -rf dist/",
    "build": "babel src/ -d dist/",
    "prepare": "run-s build",
    "prepublishOnly": "run-s validate test:cover"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/*.js"
    ]
  },
  "dependencies": {
    "postcss": "^7.0.7",
    "postcss-selector-parser": "^5.0.0",
    "postcss-value-parser": "^3.3.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/node": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.4.2",
    "eslint": "^5.10.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jest": "^22.1.2",
    "jest-cli": "^23.6.0",
    "npm-run-all": "^4.0.2",
    "opn-cli": "^4.0.0",
    "postcss-reporter": "^6.0.0",
    "prettier": "^1.15.3"
  }
}
